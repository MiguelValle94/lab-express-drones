<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="text-center py-5">Create a new drone</h2>
        <form action="/drones/create" method="post">
          <div class="form-group">
            <label for="title-input">Name:</label>
            <input type="text" class="form-control" name="name">
            <small id="emailHelp" class="form-text text-muted">Put the name for the new drone</small>
          </div>
          <div class="form-group">
            <label for="propellers-input">Propellers:</label>
            <input type="number" class="form-control" name="propellers">
          </div>
          <div class="form-group">
            <label for="maxSpeed-input">Max Speed</label>
            <input type="number" class="form-control" name="maxSpeed">
          </div>
          
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
  </div>

</div>
